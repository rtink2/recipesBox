<div class="row">
    <div class="col-md-2">
        <section class='chef_info center'>
            <%= gravatar_for(comment.chef, size: 50) %>
        </section>
    </div>

    <div class='col-md-8 card text-dark bg-light mb-3'>
        <p><%= comment.description %></p>
        <span class='quiet'>
            <small>
                Created: <%= time_ago_in_words(comment.created_at) %> ago by
                <%= comment.chef.chefname.capitalize %>
            </small>
        </span>
    </div>
</div>