<%= render 'shared/page_title', title: @recipe.name %>

<div class="col-md-12">
  <div class="card text-dark bg-light mb-3">
    <div class="card-body">

      <h4 class="card-title text-center description"><strong>Steps: </strong></h4>
      <p class="card-text"><%= simple_format(@recipe.description.capitalize) %></p>
      <div class='float-end'>
        <p class='center'>
          <em>Created by:</em>
        </p>
        <p class='center'>
          <%= link_to gravatar_for(@recipe.chef), recipes_path %>
        </p>
      <p class='center name'>
        <small><%= @recipe.chef.chefname %></small>
      </p>
      <p class="text-end">
          <%= time_ago_in_words(@recipe.created_at) %> ago
      </p>
    </div>
    </div>
  </div>
</div>