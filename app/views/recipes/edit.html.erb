<%= render 'shared/page_title', title: 'edit recipe' %>

<% if @recipe.errors.any? %>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="card border-danger mb-3 error-card">
        <div class="card-header">
          <div class="card-body text-danger">
            <h2 class="card-title error-title">
              <%= pluralize(@recipe.errors.count, "error") %>
              prohibited this <%= @recipe.class %> from being saved:
            </h2>
            <div class="card-text error-body">
              <ul>
                <% @recipe.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
        </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<div class="row mt-5">
    <%= form_for(@recipe, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group mb-3">
        <div class="col-sm-12">
          <%= f.text_field :name, class: "form-control", placeholder: "Name of recipe", autofocus: true %>
        </div>
      </div>
      <div class="form-group mb-3">
        <div class="col-sm-12">
          <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Enter steps to create recipe" %>
        </div>
      </div>
      <div class="col-md-offset-2 col-md-10">
        <%= f.submit class: "btn btn-warning btn-sm btn-custom" %>
      </div>
    <% end %>
    <div class="col-md-6 col-md-offset-6">
      [<%= link_to "Cancel request and return to all recipes", recipes_path, class: "cancel" %>]
    </div>
</div>