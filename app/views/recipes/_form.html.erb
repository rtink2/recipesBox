<%= render 'shared/errors', obj: @recipe %>

<div class="row mt-5">
    <%= form_for(@recipe, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group mb-3">
        <div class="col-sm-12">
          <%= f.text_field :name, class: "form-control", placeholder: "Name of recipe", autofocus: true %>
        </div>
      </div>
      <div class="form-group mb-3">
        <div class="col-sm-12">
          <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Enter steps to create recipe" %>
        </div>
      </div>

      <div class="form-group mb-3">
        <div class="row">
          <div class="col-md-offset-2 col-md-8">
            <%= f.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name do |cb| %>
              <% cb.label(class: 'checkbox-inline input_checkbox') {cb.check_box(class: 'checkbox m-1') + cb.text}%>
            <% end %>
          </div>
        </div>
      </div>

      <div class="col-md-offset-2 col-md-10">
        <%= f.submit class: "btn btn-warning btn-sm btn-custom" %>
      </div>
    <% end %>
    <div class="col-md-6 col-md-offset-6">
      [<%= link_to "Cancel request and return to all recipes", recipes_path, class: "cancel" %>]
    </div>
</div>