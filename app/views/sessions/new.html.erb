<%= render 'shared/page_title', title: 'Log In' %>

<div class="row mt-5">
    <%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
      <div class="form-group mb-3">
        <div class="col-sm-12">
          <%= f.email_field :email, class: "form-control", placeholder: "Enter your email" %>
        </div>
      </div>
      <div class="form-group mb-3">
        <div class="col-sm-12">
          <%= f.password_field :password, class: "form-control", placeholder: "Enter your password" %>
        </div>
      </div>
      <div class="col-md-10">
        <%= f.submit "Log In", class: "btn btn-warning btn-sm btn-custom" %>
      </div>
    <% end %>
    <div class="row">
      <div class="col-md-6 offset-md-4">
        [<%= link_to "Don't have an account? Sign up now!", signup_path, class: "cancel" %>]
      </div>
    </div>
</div>